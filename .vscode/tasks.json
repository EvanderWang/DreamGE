{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Debug",
            "type": "shell",
            "windows": {
                "command": " && mkdir .\\build\\Debug || cd ./build/Debug && cmake ../.. -GNinja -DCMAKE_BUILD_TYPE=Debug && ninja"
            },
            "osx": {
                "command": " mkdir -p build/Debug && cd build/Debug && cmake ../.. -GNinja -DCMAKE_BUILD_TYPE=Debug && ninja"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Build Relase",
            "type": "shell",
            "windows": {
                "command": " && mkdir .\\build\\Release || cd ./build/Release && cmake ../.. -GNinja -DCMAKE_BUILD_TYPE=Release && ninja"
            },
            "osx": {
                "command": " mkdir -p ./build/Release && cd ./build/Release && cmake ../.. -GNinja -DCMAKE_BUILD_TYPE=Release && ninja"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}