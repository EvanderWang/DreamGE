{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "clang-cl Debug",
            "type": "shell",
            "windows": {
                "command": "${config:DreamGE.complier.windows}",
                "args": [
                    "main.cpp",
                    "/Z7",
                    "/MDd",
                    "/W4",
                    "/EHsc",
                    "/std:c++17",
                    "/Od",
                    "/obuild/Debug/Test.exe",
                    "/linkUser32.lib"
                ],
            },
            "osx": {
                "command": "clang++",
                "args": [
                    "main.cpp",
                    "-g",
                    "-std=c++17",
                    "-obuild/Debug/Test",
                ],
            },
            "group": {
              "kind": "build",
              "isDefault": true
            }
        }
    ]
}