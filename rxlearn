@startuml
class observable << T; SourceOperator >> {
    composite_subscription detail_subscribe(Subscriber subscriber);
    --
    SourceOperator source_operator;
}

class observable_base << T >>{
}

class subscriber << T; Observer >>
class composite_subscription
class composite_subscription_inner
class subscription
class subscription_base

observable --|> observable_base
observable ..> subscriber
observable ..> composite_subscription
composite_subscription --|> composite_subscription_inner
composite_subscription --|> subscription
subscription --|> subscription_base
@enduml